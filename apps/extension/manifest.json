{
  "manifest_version": 3,
  "name": "PrivID Extension",
  "version": "1.0",
  "description": "Privacy-preserving identity verification using zero-knowledge proofs.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://bsky.app/profile/*"],
      "js": ["dist/content/injectBadge.js"],
      "css": ["dist/content/injectBadge.css"]
    }
  ]
}