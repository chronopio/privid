{
  "manifest_version": 3,
  "name": "PrivID Extension",
  "version": "1.0",
  "description": "Privacy-preserving identity verification using zero-knowledge proofs.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
